[user]
	email = epandurski@gmail.com
	name = Evgeni Pandurski
[log]
	abbrevCommit = yes
[color]
	ui = auto
[merge]
	tool = mymeld
	conflictstyle = diff3
[mergetool "mymeld"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE --output $MERGED
[remote]
	pushdefault = origin
[push]
	default = simple
[core]
	excludesfile = /home/evgeni/.gitignore_global
